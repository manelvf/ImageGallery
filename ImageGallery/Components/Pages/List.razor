@page "/list"
@using System.Net
@inject IHttpClientFactory HttpClientFactory;
@inject IJSRuntime JS
@rendermode InteractiveServer

<h3>Image List</h3>

@if (images == null)
{
    <p>Loading...</p>
}
else if (images.Count == 0)
{
    <p>No components found.</p>
}
else
{
    <ul>
        @foreach (var image in images)
        {
            <li>
                <img src="thumbs/@image" />
                <a href="thumbs/@image">Thumbnail</a>
                <a href="optimized/@image">Optimized</a>
                <a href="uploads/@image">Original</a>
                <button @onclick="OpenPromptDialog">Delete</button>
            </li>
        }
    </ul>
}

<PromptDialog IsVisible="@_isPromptVisible"
              Title="Delete Image"
              Message="Please enter your password:"
              Placeholder="Your password"
              OnClose="HandlePromptClose"
              OnConfirm="HandlePromptConfirm" />


@code {
    private bool _isPromptVisible = false;
    private string _userInput = string.Empty;

    private void OpenPromptDialog()
    {
        _isPromptVisible = true;
    }

    private void HandlePromptClose()
    {
        _isPromptVisible = false;
        Console.WriteLine("Prompt dialog was cancelled");
    }

    private void HandlePromptConfirm(string inputValue)
    {
        _isPromptVisible = false;
        _userInput = inputValue;
        Console.WriteLine($"Prompt confirmed with value: {inputValue}");
    }
    
    private List<string> images;
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient("APIClient");
            images = await httpClient.GetFromJsonAsync<List<string>>("api/list");
            Console.WriteLine(images);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching images {ex.Message}");
        }
    }
    
}